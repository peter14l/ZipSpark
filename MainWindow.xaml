<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ZipSpark_New.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZipSpark_New"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ZipSpark">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <Grid Background="Transparent" AllowDrop="True" DragOver="Grid_DragOver" Drop="Grid_Drop">
        <Grid Padding="40,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <StackPanel Spacing="8">
                    <TextBlock 
                        Text="ZipSpark" 
                        Style="{StaticResource TitleTextBlockStyle}"
                        Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock 
                        Text="Fast archive extraction utility" 
                        Style="{StaticResource BodyTextBlockStyle}"
                        Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <!-- Settings Button -->
                <Button x:Name="SettingsButton"
                        Click="PreferencesButton_Click"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        ToolTipService.ToolTip="Settings (Alt+S)"
                        AccessKey="S">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <SymbolIcon Symbol="Setting"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" VerticalAlignment="Center">
                <StackPanel Spacing="24" MaxWidth="600">
                    
                    <!-- Archive Info Card / Drag-Drop Zone -->
                    <Border 
                        x:Name="DropZoneBorder"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="12"
                        Padding="32"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="2"
                        MinHeight="200">
                        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Icon -->
                            <FontIcon 
                                Glyph="&#xE8B7;" 
                                FontSize="48"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            
                            <!-- Title -->
                            <TextBlock 
                                x:Name="DropZoneTitle"
                                Text="Drop Archive Here"
                                Style="{StaticResource SubtitleTextBlockStyle}"
                                HorizontalAlignment="Center"
                                FontWeight="SemiBold"/>
                            
                            <!-- Archive Path (hidden initially) -->
                            <TextBlock 
                                x:Name="ArchivePathText"
                                Text=""
                                Style="{StaticResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed"/>
                            
                            <!-- Archive Info (hidden initially) -->
                            <TextBlock 
                                x:Name="ArchiveInfoText"
                                Text=""
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed"/>
                            
                            <!-- Supported Formats -->
                            <StackPanel x:Name="SupportedFormatsPanel" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="ZIP" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="7Z" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="RAR" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="TAR" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="8,4">
                                    <TextBlock Text="GZ" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            
                            <!-- Browse Button -->
                            <Button 
                                x:Name="BrowseButton"
                                Click="ExtractButton_Click"
                                HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <SymbolIcon Symbol="OpenFile"/>
                                    <TextBlock Text="Browse Files"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Progress Section -->
                    <StackPanel x:Name="ProgressSection" Spacing="16" Visibility="Collapsed">
                        <!-- Overall Progress -->
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock 
                                    Text="Overall Progress"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock 
                                    x:Name="OverallProgressText"
                                    Text="0%"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Foreground="{StaticResource AccentGreenBrush}"
                                    HorizontalAlignment="Right"/>
                            </Grid>
                            <ProgressBar 
                                x:Name="OverallProgressBar"
                                Height="8"
                                Foreground="{StaticResource AccentGreenBrush}"
                                Background="{StaticResource DarkElevatedBrush}"
                                CornerRadius="4"
                                Minimum="0"
                                Maximum="100"
                                Value="0"
                                AutomationProperties.Name="Overall extraction progress"
                                AutomationProperties.LiveSetting="Polite"/>
                        </StackPanel>

                        <!-- Current File Progress -->
                        <StackPanel Spacing="8">
                            <Grid>
                                <TextBlock 
                                    x:Name="CurrentFileText"
                                    Text="Extracting..."
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    TextTrimming="CharacterEllipsis"/>
                                <TextBlock 
                                    x:Name="SpeedText"
                                    Text="0 MB/s"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    HorizontalAlignment="Right"/>
                            </Grid>
                            <ProgressBar 
                                x:Name="FileProgressBar"
                                Height="4"
                                Foreground="{StaticResource PrimaryBlueBrush}"
                                Background="{StaticResource DarkElevatedBrush}"
                                CornerRadius="2"
                                Minimum="0"
                                Maximum="100"
                                Value="0"
                                IsIndeterminate="True"/>
                        </StackPanel>

                        <!-- Status Text -->
                        <TextBlock 
                            x:Name="StatusText"
                            Text="Preparing extraction..."
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            HorizontalAlignment="Center"
                            AutomationProperties.LiveSetting="Polite"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button 
                            x:Name="ExtractButton"
                            Grid.Column="0"
                            Content="Extract Archive"
                            HorizontalAlignment="Stretch"
                            Height="48"
                            Background="{StaticResource PrimaryBlueBrush}"
                            Foreground="White"
                            CornerRadius="8"
                            FontWeight="SemiBold"
                            Click="ExtractButton_Click"
                            AccessKey="E"
                            ToolTipService.ToolTip="Extract Archive (Alt+E)"
                            AutomationProperties.Name="Extract Archive"
                            AutomationProperties.HelpText="Extract the selected archive file"/>

                        <Button 
                            x:Name="CancelButton"
                            Grid.Column="1"
                            Content="Cancel"
                            HorizontalAlignment="Stretch"
                            Height="48"
                            Background="{StaticResource DarkSurfaceBrush}"
                            Foreground="{StaticResource TextPrimaryBrush}"
                            BorderBrush="{StaticResource TextDisabledBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Visibility="Collapsed"
                            Click="CancelButton_Click"
                            AccessKey="C"
                            ToolTipService.ToolTip="Cancel Extraction (Alt+C)"
                            AutomationProperties.Name="Cancel Extraction"/>
                    </Grid>

                </StackPanel>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12" Margin="0,24,0,0">
                <HyperlinkButton 
                    Content="Preferences"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Click="PreferencesButton_Click"/>
                
                <TextBlock Text="•" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                
                <Button x:Name="DonateButton"
                        Content="Donate"
                        Click="DonateButton_Click"
                        Style="{StaticResource AccentButtonStyle}"/>
                
                <TextBlock Text="•" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                
                <HyperlinkButton 
                    Content="About" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Click="AboutButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
